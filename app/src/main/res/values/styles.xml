<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bg_red_alpha</item>
        <item name="colorPrimaryDark">@color/bg_red_alpha</item>
        <item name="colorAccent">@color/bg_red</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/bg_red_alpha</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="button_continue" parent="android:Widget.ImageButton">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">36dp</item>
        <item name="android:paddingRight">36dp</item>

        <!--<item name="android:background">@drawable/ic_launcher_background</item>-->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/hint_color</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/bg_blew</item>
        <item name="colorControlHighlight">@color/bg_blew</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:colorAccent">@color/bg_blew</item>

    </style>

    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
        <item name="android:statusBarColor">@color/bg_red_alpha</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="DefaultNumberPickerTheme" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/hint_color</item>
    </style>

    <style name="MY_DIALOG" parent="Theme.AppCompat">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="DefaultNumberPickerTheme1" parent="AppTheme">
        <item name="colorControlNormal">@color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>

    </style>

    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.Header" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bg_red</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.Date" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/mcv_text_date_light</item>
    </style>

    <style name="TextAppearance.MaterialCalendarWidget.WeekDay" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">12sp</item>
    </style>
</resources>
