<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_120sdp"
        android:layout_marginRight="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:paddingTop="8dp"
            android:text="user name"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/msgr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center|top"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bubble_shape_right"
            android:gravity="center_vertical|top"
            android:padding="@dimen/_8sdp"
            android:text="sdvsvsavafhgsahgfjasgfjasjkfhjkshfjkhsajkhfdjkhfjdksahfhsafhsahdfhasfhsfhsdfjkhashfjshaf"
            android:minWidth="@dimen/_20sdp"
            android:paddingRight="@dimen/_8sdp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"

            android:drawablePadding="8dp"
            android:text="30 july,8:21 am"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/_8sdp"
             />
    </LinearLayout>

</LinearLayout>