<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/tool_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:orientation="vertical">


        <com.hyperlocal.app.ui.customview.RobotoBoldTextView
            android:id="@+id/text_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_52sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/registration"
            android:textColor="@color/text_dark_gray"
            android:textSize="@dimen/_18sdp"
            tools:ignore="MissingPrefix" />


        <com.hyperlocal.app.adapter.NonSwipeAbleViewPager
            android:layout_marginTop="@dimen/_22sdp"
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <com.hyperlocal.app.ui.customview.ComfortRegularButton
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@drawable/next_btn_shape"
            android:elevation="@dimen/_2sdp"
            android:gravity="center"
            android:minWidth="@dimen/_170sdp"
            android:minHeight="@dimen/_35sdp"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />
    </LinearLayout>

    <include layout="@layout/progress_bar" />
</FrameLayout>
