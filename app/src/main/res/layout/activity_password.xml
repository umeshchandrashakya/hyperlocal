<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linear_layout"
    android:clickable="true"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/tool_bar"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_52sdp"
        android:layout_marginRight="@dimen/_38sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:orientation="vertical">

        <com.hyperlocal.app.ui.customview.RobotoMediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/bg_red"
            android:textSize="@dimen/_24sdp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/address_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/bg_blew"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">


            <com.hyperlocal.app.ui.customview.RobotoBoldEditText
                android:id="@+id/edit_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:backgroundTint="@color/bg_blew"
                android:hint="Enter password here"
                android:inputType="textPassword"
                android:maxLength="20"
                android:minHeight="@dimen/_44sdp"
                android:singleLine="true"
                android:textColor="@color/hint_color" />
        </android.support.design.widget.TextInputLayout>

        <com.hyperlocal.app.ui.customview.ComfortRegularButton
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/next_btn_shape"
            android:elevation="@dimen/_2sdp"
            android:gravity="center"
            android:minWidth="@dimen/_170sdp"
            android:minHeight="@dimen/_35sdp"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

    </LinearLayout>

</LinearLayout>