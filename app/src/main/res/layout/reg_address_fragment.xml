<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_52sdp"
        android:layout_marginRight="@dimen/_38sdp"
        android:orientation="vertical">

        <com.hyperlocal.app.ui.customview.RobotoMediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:textColor="@color/bg_red"
            android:textSize="@dimen/_24sdp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/address_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:backgroundTint="@color/bg_blew"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <com.hyperlocal.app.ui.customview.RobotoBoldEditText
                android:id="@+id/edit_address"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:backgroundTint="@color/bg_blew"
                android:hint="@string/enter_address_here"
                android:minHeight="@dimen/_44sdp"


                android:textColor="@color/hint_color" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>
    </LinearLayout>
</FrameLayout>